<?xml version="1.0" encoding="UTF-8"?>

<definitions name="ReportingService"
             xmlns="http://schemas.xmlsoap.org/wsdl/"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema"
             xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
             xmlns:tns="http://www.travelport.com/service/reporting_v35_0"
             xmlns:ns1="http://www.travelport.com/schema/reporting_v35_0"
             targetNamespace="http://www.travelport.com/service/reporting_v35_0">

    <import namespace="http://www.travelport.com/service/reporting_v35_0"
          location="ReportingAbstract.wsdl" />

    <binding name="UniversalRecordReportBinding"
             type="tns:UniversalRecordReportPortType">
        <soap:binding style="document"
                      transport="http://schemas.xmlsoap.org/soap/http" />
        <operation name="service">
            <soap:operation soapAction="http://localhost:8080/kestrel/UniversalRecordReportService"/>
                <input>
                    <soap:body use="literal" />
                </input>
                <output>
                    <soap:body use="literal" />
                </output>
                <fault name="ErrorInfoMsg">
                    <soap:fault name="ErrorInfoMsg" use="literal" />
            	</fault>                
        </operation>
    </binding>
    
     <binding name="ProfileMigrationSyncReportBinding"
             type="tns:ProfileMigrationSyncReportPortType">
        <soap:binding style="document"
                      transport="http://schemas.xmlsoap.org/soap/http" />
        <operation name="service">
            <soap:operation soapAction="http://localhost:9080/kestrel/UniversalRecordReportService"/>
                <input>
                    <soap:body use="literal" />
                </input>
                <output>
                    <soap:body use="literal" />
                </output>
                <fault name="ErrorInfoMsg">
                    <soap:fault name="ErrorInfoMsg" use="literal" />
                </fault>                
        </operation>
    </binding>
    
    <!-- Service -->
    
    <service name="UniversalRecordReportService">
        <port name="UniversalRecordReportPort"
              binding="tns:UniversalRecordReportBinding">
            <soap:address
                    location="http://localhost:8080/kestrel/UniversalRecordReportService" />
        </port>
        <port name="ProfileMigrationSyncReportPort"
              binding="tns:ProfileMigrationSyncReportBinding">
          <soap:address
                  location="http://localhost:9080/kestrel/UniversalRecordReportService" />
        </port>
    </service>    
    
</definitions>
